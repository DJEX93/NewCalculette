<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="com.mhb.calculette.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/ecran"
        android:layout_alignParentTop="true"
        android:textAlignment="textEnd"
        android:textSize="@android:dimen/notification_large_icon_height"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:autoText="false"
        android:clickable="true"
        android:maxLines="1"
        android:singleLine="true"
        android:scrollIndicators="left|right"
        android:textIsSelectable="true" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalScrollView"
        android:layout_below="@+id/ecran">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ecran"
            android:clickable="false"
            android:useDefaultMargins="false"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="78dp"
                android:text="+/-"
                android:id="@+id/buttonPM"
                android:layout_row="0"
                android:layout_column="1"
                android:clickable="false"
                android:background="@drawable/roundboutton"
                android:textSize="40dp"
                android:layout_margin="1dp" />

            <Button
                android:layout_width="79dp"
                android:layout_height="78dp"
                android:text="%"
                android:id="@+id/buttonPC"
                android:layout_row="0"
                android:layout_column="2"
                android:clickable="false"
                android:background="@drawable/roundboutton"
                android:textSize="40dp"
                android:layout_margin="1dp" />

            <Button
                android:layout_width="79dp"
                android:layout_height="78dp"
                android:text="Del"
                android:id="@+id/buttonDel"
                android:layout_row="0"
                android:layout_column="3"
                android:clickable="false"
                android:background="@drawable/roundboutton"
                android:textSize="40dp"
                android:longClickable="true"
                android:layout_margin="1dp" />

            <Button
                android:layout_width="79dp"
                android:layout_height="78dp"
                android:text="7"
                android:id="@+id/button7"
                android:layout_row="1"
                android:layout_column="0"
                android:clickable="false"
                android:background="@drawable/roundboutton"
                android:textSize="40dp"
                android:layout_margin="1dp" />

            <Button
                android:layout_width="79dp"
                android:layout_height="78dp"
                android:text="C"
                android:id="@+id/buttonC"
                android:layout_row="0"
                android:layout_column="0"
                android:clickable="false"
                android:background="@drawable/roundboutton"
                android:textSize="40dp"
                android:layout_margin="1dp" />

            <Button
                android:layout_width="79dp"
                android:layout_height="78dp"
                android:text="8"
                android:id="@+id/button8"
                android:layout_row="1"
                android:layout_column="1"
                android:clickable="false"
                android:background="@drawable/roundboutton"
                android:textSize="40dp"
                android:layout_margin="1dp" />

            <Button
                android:layout_width="79dp"
                android:layout_height="78dp"
                android:text="9"
                android:id="@+id/button9"
                android:layout_row="1"
                android:layout_column="2"
                android:clickable="false"
                android:background="@drawable/roundboutton"
                android:textSize="40dp"
                android:layout_margin="1dp" />

            <Button
                android:layout_width="79dp"
                android:layout_height="78dp"
                android:text="/"
                android:id="@+id/buttonDiv"
                android:layout_row="1"
                android:layout_column="3"
                android:clickable="false"
                android:background="@drawable/roundboutton"
                android:textSize="40dp"
                android:layout_margin="1dp" />

            <Button
                android:layout_width="79dp"
                android:layout_height="78dp"
                android:text="4"
                android:id="@+id/button4"
                android:layout_row="2"
                android:layout_column="0"
                android:clickable="false"
                android:background="@drawable/roundboutton"
                android:textSize="40dp"
                android:layout_margin="1dp" />

            <Button
                android:layout_width="79dp"
                android:layout_height="78dp"
                android:text="5"
                android:id="@+id/button5"
                android:layout_row="2"
                android:layout_column="1"
                android:clickable="false"
                android:background="@drawable/roundboutton"
                android:textSize="40dp"
                android:layout_margin="1dp" />

            <Button
                android:layout_width="79dp"
                android:layout_height="78dp"
                android:text="6"
                android:id="@+id/button6"
                android:layout_row="2"
                android:layout_column="2"
                android:clickable="false"
                android:background="@drawable/roundboutton"
                android:textSize="40dp"
                android:layout_margin="1dp" />

            <Button
                android:layout_width="79dp"
                android:layout_height="78dp"
                android:id="@+id/buttonMul"
                android:layout_row="2"
                android:layout_column="3"
                android:clickable="false"
                android:background="@drawable/roundboutton"
                android:textSize="40dp"
                android:layout_margin="1dp"
                android:text="X" />

            <Button
                android:layout_width="79dp"
                android:layout_height="78dp"
                android:text="1"
                android:id="@+id/button1"
                android:layout_row="3"
                android:layout_column="0"
                android:clickable="false"
                android:background="@drawable/roundboutton"
                android:textSize="40dp"
                android:layout_margin="1dp" />

            <Button
                android:layout_width="79dp"
                android:layout_height="78dp"
                android:text="2"
                android:id="@+id/button2"
                android:layout_row="3"
                android:layout_column="1"
                android:clickable="false"
                android:background="@drawable/roundboutton"
                android:textSize="40dp"
                android:layout_margin="1dp" />

            <Button
                android:layout_width="79dp"
                android:layout_height="78dp"
                android:text="3"
                android:id="@+id/button3"
                android:layout_row="3"
                android:layout_column="2"
                android:clickable="false"
                android:background="@drawable/roundboutton"
                android:textSize="40dp"
                android:layout_margin="1dp" />

            <Button
                android:layout_width="79dp"
                android:layout_height="78dp"
                android:text="-"
                android:id="@+id/buttonMoins"
                android:layout_row="3"
                android:layout_column="3"
                android:clickable="false"
                android:background="@drawable/roundboutton"
                android:textSize="40dp"
                android:layout_margin="1dp" />

            <Button
                android:layout_width="79dp"
                android:layout_height="78dp"
                android:text="0"
                android:id="@+id/button0"
                android:layout_row="4"
                android:layout_column="0"
                android:clickable="false"
                android:background="@drawable/roundboutton"
                android:textSize="40dp"
                android:layout_margin="1dp" />

            <Button
                android:layout_width="79dp"
                android:layout_height="78dp"
                android:text="."
                android:id="@+id/buttonPoint"
                android:layout_row="4"
                android:layout_column="1"
                android:clickable="false"
                android:background="@drawable/roundboutton"
                android:textSize="40dp"
                android:layout_margin="1dp" />

            <Button
                android:layout_width="79dp"
                android:layout_height="78dp"
                android:text="="
                android:id="@+id/buttonEgal"
                android:layout_row="4"
                android:layout_column="2"
                android:clickable="false"
                android:background="@drawable/roundboutton"
                android:textSize="40dp"
                android:layout_margin="1dp" />

            <Button
                android:layout_width="79dp"
                android:layout_height="78dp"
                android:text="+"
                android:id="@+id/buttonPlus"
                android:layout_row="4"
                android:layout_column="3"
                android:clickable="false"
                android:background="@drawable/roundboutton"
                android:textSize="40dp"
                android:layout_margin="1dp" />

        </GridLayout>
    </HorizontalScrollView>

</RelativeLayout
    >

